<form bindsubmit="formSubmit" bindreset="formReset">
  <view class="section section1">
    <input name="truename" type='text' placeholder="姓名" bindblur="name"/>
  </view>
  <view class="section">
    <input name="tel" type='number' placeholder="手机号码" />
  </view>
  <view class="section ">
    <input name="add" placeholder="省份、城市、区县" value='{{areaInfo}}' bindtap="selectDistrict"/>
    <view class='col_ccc {{add_show==0?"show":"hide"}}'>请选择</view> 
  </view>
  <view class="section ">
    <input name="add_disc" type='text' placeholder="详细地址" bindinput="bn1"/><text class='col_ccc {{add_se==0?"show":"hide"}}'>如楼道、楼盘号等</text>
  </view>
   <view class='ping felx_end'>
  <image src='{{niming}}' class='niminmg' bindtap='niming'></image> 
  <text class='vi_mi'>设为默认地址</text>
  </view> 
 <button class='white dow' formType="submit">保存</button>
</form>

<view class="picker-view" style="visibility:{{addressMenuIsShow ? 'visible':'hidden'}}">
  <view class='chen'>
    <text catchtap="cityCancel">取消</text>
    <text style="float: right" catchtap="citySure">确定</text>
  </view>
  <picker-view bindchange="cityChange" value="{{value}}" wx:key="">
    <picker-view-column>
      <view wx:for="{{provinces}}"  wx:key="" class="picker-item">
        {{item.name}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{citys}}" class="picker-item" wx:key="">
        {{item.name}}</view>
    </picker-view-column>
    <picker-view-column>
      <view wx:for="{{areas}}" class="picker-item" wx:key="">
        {{item.name}}</view>
    </picker-view-column>
  </picker-view>
</view>


